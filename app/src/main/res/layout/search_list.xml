<?xml version="1.0" encoding="utf-8"?>

<!--

    Here, using a search_list file instead of meal_list (TODO rename meal_list to meal_list)
    Reasoning - separation of concern
    In this scenario, there is no need for "amount" for recipe
    Rather than using meal_list to hide "amount" TextView, search_list is created instead
    Allowing for additional information to be added/removed if needed

-->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d1d1d1"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padd_10"
            android:src="@drawable/ic_baseline_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padd_10"
            android:layout_toStartOf="@id/delete_icon"
            android:text="@string/remove"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="7dp">

        <ImageView
            android:id="@+id/meal_picture"
            android:layout_width="135dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/meals"
            android:background="@drawable/recipe_image_border"
            app:srcCompat="@drawable/food"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/meal_serves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:textColor="#3a3a3a"
            android:paddingStart="145dp" />


    </RelativeLayout>

</FrameLayout>